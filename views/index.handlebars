
<!-- Main -->
<main class="container-fluid">
    <div class="row">

        <!-- Left side bar -->
        <aside class="col-lg-4 col-mg-12 col-sm-12">
            <div class="control-panel">
                <h4> STUDENT CONTROL PANEL </h4>
                <hr class="line">

                <ul class="nav flex-column list-features">

                    <li class="nav-item">
                        <a class="nav-link on-page" href="#">Book appointments</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/test">View status</a>
                    </li>

                    <li class="nav-item">
